{
    "name": "marcossegovia/rover-kata",
    "type": "project",
    "description": "Mars Rover kata",
    "homepage": "https://github.com/marcossegovia/rover-kata",
    "keywords": [
        "kata",
        "uvinum",
        "testing"
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "behat/behat": "^3.4",
        "mikey179/vfsStream": "^1.6",
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^3.2",
        "symfony/var-dumper": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Kata\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kata\\": "tests/Unit",
            "Kata\\Behat\\": "tests/Integration"
        }
    },
    "scripts": {
        "test-unit": "vendor/bin/phpunit",
        "format": "phpcbf --standard=psr2 src/"
    },
    "minimum-stability": "stable",
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
